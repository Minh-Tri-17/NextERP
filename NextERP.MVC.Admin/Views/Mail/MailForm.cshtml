@using NextERP.ModelBase
@using NextERP.Util
@model NextERP.ModelBase.MailModel

<div class="modal fade" id="create-edit-modal" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <form class="needs-validation" id="@TableName.Mail" novalidate>
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel" localize-content>CreateOrEdit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input id="@AttributeNames.Mail.MailId" type="hidden" asp-for="Id" />

                    <div class="mb-2">
                        <label for="@AttributeNames.Mail.MailCode" class="col-form-label col-md-6" localize-content>@AttributeNames.Mail.MailCode</label>
                        <div class="col-md-12">
                            <input class="form-control form-control-sm" type="text" asp-for="MailCode" disabled />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="@AttributeNames.Mail.MailName" class="col-form-label col-md-6" localize-content>@AttributeNames.Mail.MailName</label>
                        <div class="col-md-12">
                            <input class="form-control form-control-sm" type="text" asp-for="MailName" />
                            <div class="invalid-feedback" id="invalid-@AttributeNames.Mail.MailName" localize-content></div>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="@AttributeNames.Mail.MailContent" class="col-form-label col-md-6" localize-content>@AttributeNames.Mail.MailContent</label>
                        <div class="col-md-12">
                            <textarea class="form-control form-control-sm" rows="3" asp-for="MailContent"></textarea>
                            <div class="invalid-feedback" id="invalid-@AttributeNames.Mail.MailContent" localize-content></div>
                        </div>
                    </div>
                
                    <div class="mb-2">
                        <label for="@AttributeNames.Mail.Note" class="col-form-label col-md-6" localize-content>@AttributeNames.Mail.Note</label>
                        <div class="col-md-12">
                            <textarea class="form-control form-control-sm" rows="3" asp-for="Note"></textarea>
                            <div class="invalid-feedback" id="invalid-@AttributeNames.Mail.Note" localize-content></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" localize-content>Close</button>
                    <button type="button" class="btn btn-outline-primary save-button" id="only-save-button" localize-content>Save</button>
                    <button type="button" class="btn btn-primary save-button" data-bs-dismiss="modal" localize-content>Save&Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(".save-button").click(function () {
        const $form = $(this).closest("form");
        const formData = new FormData($form[0]);
        const formElement = $form[0];
        let id = formData.get("@Constants.Id");

        // Nếu không có ID (tạo mới), set Guid.Empty
        if (!id || id === "" || id === "@Guid.Empty") {
            formData.set("@Constants.Id", "@Guid.Empty");
        }

        callApi("@Url.Action(Constants.CreateOrEdit, TableName.Mail)", "POST", formData)
            .then(data => {
                loadMails();

                if (data && Array.isArray(data)) {
                    showInvalid(data, formElement);
                }
            })
            .catch(err => {
                showMessage({ success: false, message: "F:Có lỗi xảy ra!" });
            });
    });
</script>

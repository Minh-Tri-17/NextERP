@using NextERP.ModelBase
@using NextERP.Util
@model NextERP.ModelBase.AppointmentModel

<div class="modal fade" id="create-edit-modal" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <form class="needs-validation" novalidate>
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel" localize-content>CreateOrEdit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="@AttributeNames.Appointment.AppointmentId" asp-for="Id" />

                    <div class="mb-2">
                        <label for="@AttributeNames.Appointment.AppointmentCode" class="col-form-label col-md-6" localize-content>@AttributeNames.Appointment.AppointmentCode</label>
                        <div class="col-md-12">
                            <input class="form-control form-control-sm" id="@AttributeNames.Appointment.AppointmentCode" type="text" asp-for="AppointmentCode" disabled />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="@AttributeNames.Appointment.AppointmentDate" class="col-form-label col-md-6" localize-content>@AttributeNames.Appointment.AppointmentDate</label>
                        <div class="col-md-12">
                            <input type="datetime-local" class="form-control form-control-sm" id="@AttributeNames.Appointment.AppointmentDate" asp-for="AppointmentDate" />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="@AttributeNames.Appointment.AppointmentStatus" class="col-form-label col-md-6" localize-content>@AttributeNames.Appointment.AppointmentStatus</label>
                        <div class="col-md-12">
                            <select class="form-select" id="@AttributeNames.Appointment.AppointmentStatus" asp-for="AppointmentStatus">
                                <option value="" selected></option>
                                @foreach (var item in Enum.GetValues(typeof(Enums.AppointmentStatus)))
                                {
                                    <option value="@item" localize-content>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="@AttributeNames.Appointment.TotalCost" class="col-form-label col-md-6" localize-content>@AttributeNames.Appointment.TotalCost</label>
                        <div class="col-md-12">
                            <input type="number" class="form-control form-control-sm" id="@AttributeNames.Appointment.TotalCost" asp-for="TotalCost" disabled />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="@AttributeNames.Appointment.Note" class="col-form-label col-md-6" localize-content>@AttributeNames.Appointment.Note</label>
                        <div class="col-md-12">
                            <textarea class="form-control form-control-sm" id="@AttributeNames.Appointment.Note" rows="3" asp-for="Note"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" localize-content>Close</button>
                    <button type="button" class="btn btn-primary save-button" data-bs-dismiss="modal" localize-content>Save&Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(".save-button").click(function () {
        const $form = $(this).closest("form");
        const formData = new FormData($form[0]);
        const formElement = $form[0];

        // Kiểm tra tính hợp lệ của form
        if (!formElement.checkValidity()) {
            // Nếu form không hợp lệ, hiển thị thông báo lỗi
            formElement.classList.add("was-validated");
        }
        else {
            fetch('@Url.Action("CreateOrEdit", TableName.Appointment)', {
                method: "POST",
                body: formData
            }).then(response => {
                loadAppointments();
                return response.json();
            }).then(data => {
                showMessage(data);
            })
        }
    });
</script>

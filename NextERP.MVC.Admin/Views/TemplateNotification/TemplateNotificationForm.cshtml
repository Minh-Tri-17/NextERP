@using NextERP.ModelBase
@using NextERP.Util
@model NextERP.ModelBase.TemplateNotificationModel
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer Localizer

<div class="modal fade" id="create-edit-modal" aria-hidden="true" tabindex="-1">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<form class="needs-validation" id="@TableName.TemplateNotification" novalidate>
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel" localize-content>CreateOrEdit</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<input id="@TemplateNotificationModel.AttributeNames.TemplateNotificationId" type="hidden" asp-for="Id" />

					<div class="mb-2">
						<label for="@TemplateNotificationModel.AttributeNames.TemplateNotificationCode" class="col-form-label col-md-12" localize-content>@TemplateNotificationModel.AttributeNames.TemplateNotificationCode</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="TemplateNotificationCode" disabled />
						</div>
					</div>

					<div class="mb-2">
						<label for="@TemplateNotificationModel.AttributeNames.TemplateNotificationName" class="col-form-label col-md-12" localize-content>@TemplateNotificationModel.AttributeNames.TemplateNotificationName</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="TemplateNotificationName" />
							<div class="invalid-feedback" id="invalid-@TemplateNotificationModel.AttributeNames.TemplateNotificationName" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@TemplateNotificationModel.AttributeNames.TemplateContent" class="col-form-label col-md-12" localize-content>@TemplateNotificationModel.AttributeNames.TemplateContent</label>
						<div class="col-md-12">
							<textarea class="form-control form-control-sm" rows="3" asp-for="TemplateContent"></textarea>
							<div class="invalid-feedback" id="invalid-@TemplateNotificationModel.AttributeNames.TemplateContent" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@TemplateNotificationModel.AttributeNames.Note" class="col-form-label col-md-12" localize-content>@TemplateNotificationModel.AttributeNames.Note</label>
						<div class="col-md-12">
							<textarea class="form-control form-control-sm" rows="3" asp-for="Note"></textarea>
							<div class="invalid-feedback" id="invalid-@TemplateNotificationModel.AttributeNames.Note" localize-content></div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
						<i class="fa-solid fa-xmark"></i> <span localize-content>@Constants.ButtonClose</span>
					</button>
					<button type="button" class="button-outline btn save-button" id="only-save-button">
						@{
							var saveIcon = @"<svg class=""icon"" fill=""none"" stroke=""currentColor"" viewBox=""0 0 24 24"" xmlns=""http://www.w3.org/2000/svg"" stroke-linecap=""round"" stroke-linejoin=""round"" stroke-width=""2.5""><path d=""M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z""></path><polyline points=""17 21 17 13 7 13 7 21""></polyline><polyline points=""7 3 7 8 15 8""></polyline></svg>";
						}

						@await Component.InvokeAsync(Constants.Button, new { nameButton = Constants.ButtonSave, iconHtml = saveIcon })
					</button>
					<button type="button" class="button btn save-button" data-bs-dismiss="modal">
						@{
							var saveAndCloseIcon = @"<svg class=""icon"" fill=""none"" stroke=""currentColor"" viewBox=""0 0 24 24"" xmlns=""http://www.w3.org/2000/svg"" stroke-linecap=""round"" stroke-linejoin=""round"" stroke-width=""2.5""><path d=""M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z""></path><polyline points=""17 21 17 13 7 13 7 21""></polyline><polyline points=""7 3 7 8 15 8""></polyline></svg>";
						}

						@await Component.InvokeAsync(Constants.Button, new { nameButton = Constants.ButtonSaveAndClose, iconHtml = saveAndCloseIcon })
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	$(function () {
		// Kích hoạt strict mode cho toàn bộ code bên trong hàm này
		'use strict';

		$(".save-button").click(function () {
			const $searchForm = $("#@TableName.TemplateNotification-search-form");
			const $saveForm = $(this).closest("form");
			const $formElement = $saveForm.get(0);
			const $formData = new FormData($formElement);
			let id = $formData.get("@Constants.Id");

			// Nếu không có ID (tạo mới), set Guid.Empty
			if (!id || id.trim() === "") {
				$formData.set("@Constants.Id", "@Guid.Empty");
			}

			callApi("@Url.Action(Constants.CreateOrEdit, TableName.TemplateNotification)", "POST", $formData)
				.then(data => {
					loadTemplateNotifications($searchForm);

					if (data && Array.isArray(data)) {
						showInvalid(data, $formElement);
					}
				})
				.catch(err => {
					showMessage("@Localizer[Messages.ErrorCallAPI]");
				});
		});
	});
</script>

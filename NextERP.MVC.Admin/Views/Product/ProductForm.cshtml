@using NextERP.ModelBase
@using NextERP.Util
@model NextERP.ModelBase.ProductModel
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer Localizer

<div class="modal fade" id="create-edit-modal" aria-hidden="true" tabindex="-1">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<form class="needs-validation" id="@TableName.Product" novalidate>
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel" localize-content>CreateOrEdit</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<input id="@ProductModel.AttributeNames.ProductId" type="hidden" asp-for="Id" />

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.ProductCode" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.ProductCode</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="ProductCode" disabled />
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.ProductName" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.ProductName</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="ProductName" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.ProductName" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.QuantityInStock" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.QuantityInStock</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="number" asp-for="QuantityInStock" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.QuantityInStock" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.Price" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.Price</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="number" asp-for="Price" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.Price" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.ExpirationDate" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.ExpirationDate</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="date" asp-for="ExpirationDate" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.ExpirationDate" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.ImageFiles" class="col-form-label col-md-12" localize-content>ImageFiles</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="file" asp-for="ImageFiles" accept="image/*" multiple />
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.Manufacturer" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.Manufacturer</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="Manufacturer" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.Manufacturer" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.CountryOfOrigin" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.CountryOfOrigin</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="CountryOfOrigin" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.CountryOfOrigin" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.ReorderLevel" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.ReorderLevel</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="number" asp-for="ReorderLevel" />
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.ReorderLevel" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ProductModel.AttributeNames.Note" class="col-form-label col-md-12" localize-content>@ProductModel.AttributeNames.Note</label>
						<div class="col-md-12">
							<textarea class="form-control form-control-sm" rows="3" asp-for="Note"></textarea>
							<div class="invalid-feedback" id="invalid-@ProductModel.AttributeNames.Note" localize-content></div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
						<i class="fa-solid fa-xmark"></i> <span localize-content>@Constants.ButtonClose</span>
					</button>
					<button type="button" class="button-outline btn save-button" id="only-save-button">
						@{
							var saveIcon = @"<svg class=""icon"" fill=""none"" stroke=""currentColor"" viewBox=""0 0 24 24"" xmlns=""http://www.w3.org/2000/svg"" stroke-linecap=""round"" stroke-linejoin=""round"" stroke-width=""2.5""><path d=""M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z""></path><polyline points=""17 21 17 13 7 13 7 21""></polyline><polyline points=""7 3 7 8 15 8""></polyline></svg>";
						}

						@await Component.InvokeAsync(Constants.Button, new { nameButton = Constants.ButtonSave, iconHtml = saveIcon })
					</button>
					<button type="button" class="button btn save-button" data-bs-dismiss="modal">
						@{
							var saveAndCloseIcon = @"<svg class=""icon"" fill=""none"" stroke=""currentColor"" viewBox=""0 0 24 24"" xmlns=""http://www.w3.org/2000/svg"" stroke-linecap=""round"" stroke-linejoin=""round"" stroke-width=""2.5""><path d=""M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z""></path><polyline points=""17 21 17 13 7 13 7 21""></polyline><polyline points=""7 3 7 8 15 8""></polyline></svg>";
						}

						@await Component.InvokeAsync(Constants.Button, new { nameButton = Constants.ButtonSaveAndClose, iconHtml = saveAndCloseIcon })
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	$(function () {
		// Kích hoạt strict mode cho toàn bộ code bên trong hàm này
		'use strict';

		$(".save-button").click(function () {
			const $searchForm = $("#@TableName.Product-search-form");
			const $saveForm = $(this).closest("form");
			const $formElement = $saveForm.get(0);
			const $formData = new FormData($formElement);
			let id = $formData.get("@Constants.Id");

			// Nếu không có ID (tạo mới), set Guid.Empty
			if (!id || id.trim() === "") {
				$formData.set("@Constants.Id", "@Guid.Empty");
			}

			callApi("@Url.Action(Constants.CreateOrEdit, TableName.Product)", "POST", $formData)
				.then(data => {
					loadProducts($searchForm);

					if (data && Array.isArray(data)) {
						showInvalid(data, $formElement);
					}
				})
				.catch(err => {
					showMessage("@Localizer[Messages.ErrorCallAPI]");
				});
		});
	});
</script>

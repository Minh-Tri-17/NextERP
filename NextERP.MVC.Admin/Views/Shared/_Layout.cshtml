                            <li class="sidebar-menu-item @Html.IsActive(TableName.InvoiceDetail, ActionName.InvoiceDetail.InvoiceDetailIndex, "active")">
                                <a asp-action="@ActionName.InvoiceDetail.InvoiceDetailIndex" asp-controller="@TableName.InvoiceDetail">
                                    <span><i class="fa-solid fa-file-invoice"></i><span localize-content>InvoiceDetail</span></span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-menu-item @Html.IsActive(ctrModuleMerchandise, actModuleMerchandise, "active")">
                        <a href="#" data-bs-toggle="collapse" data-bs-target="#submenu-commodity" aria-expanded="false">
                            <span><i class="fa-solid fa-boxes-stacked"></i><span localize-content>Merchandise</span></span><i class="fa-solid fa-plus"></i>
                        </a>

                        <ul class="collapse submenu @Html.IsActive(ctrModuleMerchandise, actModuleMerchandise, "show")" id="submenu-commodity" data-bs-parent=".sidebar-menu">
                            <li class="sidebar-menu-item @Html.IsActive(TableName.Product, ActionName.Product.ProductIndex, "active")">
                                <a asp-action="@ActionName.Product.ProductIndex" asp-controller="@TableName.Product">
                                    <span><i class="fa-solid fa-spray-can-sparkles"></i><span localize-content>Product</span></span>
                                </a>
                            </li>
                            <li class="sidebar-menu-item @Html.IsActive(TableName.ProductCategory, ActionName.ProductCategory.ProductCategoryIndex, "active")">
                                <a asp-action="@ActionName.ProductCategory.ProductCategoryIndex" asp-controller="@TableName.ProductCategory">
                                    <span><i class="fa-solid fa-table-list"></i><span localize-content>ProductCategory</span></span>
                                </a>
                            </li>
                            <li class="sidebar-menu-item @Html.IsActive(TableName.SupplierOrder, ActionName.SupplierOrder.SupplierOrderIndex, "active")">
                                <a asp-action="@ActionName.SupplierOrder.SupplierOrderIndex" asp-controller="@TableName.SupplierOrder">
                                    <span><i class="fa-solid fa-file-invoice-dollar"></i><span localize-content>SupplierOrder</span></span>
                                </a>
                            </li>
                            <li class="sidebar-menu-item @Html.IsActive(TableName.SupplierOrderDetail, ActionName.SupplierOrderDetail.SupplierOrderDetailIndex, "active")">
                                <a asp-action="@ActionName.SupplierOrderDetail.SupplierOrderDetailIndex" asp-controller="@TableName.SupplierOrderDetail">
                                    <span><i class="fa-solid fa-file-invoice"></i><span localize-content>SupplierOrderDetail</span></span>
                                </a>
                            </li>
                            <li class="sidebar-menu-item @Html.IsActive(TableName.Supplier, ActionName.Supplier.SupplierIndex, "active")">
                                <a asp-action="@ActionName.Supplier.SupplierIndex" asp-controller="@TableName.Supplier">
                                    <span><i class="fa-solid fa-parachute-box"></i><span localize-content>Supplier</span></span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-menu-item @Html.IsActive(TableName.Promotion, ActionName.Promotion.PromotionIndex, "active")">
                        <a asp-action="PromotionIndex" asp-controller="@TableName.Promotion">
                            <span><i class="fa-solid fa-tag"></i><span localize-content>Promotion</span></span>
                        </a>
                    </li>
                    <li class="sidebar-menu-item @Html.IsActive(ctrModuleSystem, actModuleSystem, "active")">
                        <a href="#" data-bs-toggle="collapse" data-bs-target="#submenu-system" aria-expanded="false">
                            <span><i class="fa-solid fa-user-shield"></i><span localize-content>System</span></span><i class="fa-solid fa-plus"></i>
                        </a>

                        <ul class="collapse submenu @Html.IsActive(ctrModuleSystem, actModuleSystem, "show")" id="submenu-system" data-bs-parent=".sidebar-menu">
                            <li class="sidebar-menu-item @Html.IsActive(TableName.Role, ActionName.Role.RoleIndex, "active")">
                                <a asp-action="@ActionName.Role.RoleIndex" asp-controller="@TableName.Role">
                                    <span><i class="fa-solid fa-user-tag"></i><span localize-content>Role</span></span>
                                </a>
                            </li>
                            <li class="sidebar-menu-item @Html.IsActive(TableName.User, ActionName.User.UserIndex, "active")">
                                <a asp-action="@ActionName.User.UserIndex" asp-controller="@TableName.User">
                                    <span><i class="fa-solid fa-user"></i><span localize-content>User</span></span>
                                </a>
                            </li>
                            <li class="sidebar-menu-item @Html.IsActive(TableName.Notification, ActionName.Notification.NotificationIndex, " active")">
                                <a asp-action="@ActionName.Notification.NotificationIndex" asp-controller="@TableName.Notification">
                                    <span><i class="fa-solid fa-envelope"></i><span localize-content>Notification</span></span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </aside>
        </div>

        <!--& CONTENT -->
        <div class="layout-content">
            <!--& HEADER -->
            <header class="header">
                <div class="header-logo d-flex d-lg-none">
                    <button class="btn-icon" id="toggle-menu" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-menu">
                        <img src="~/images/menu.png" alt="Mở/Đóng menu" />
                    </button>
                    <a class="logo" asp-action="@ActionName.DashboardIndex" asp-controller="Dashboard">
                        <img src="~/images/logo.png" alt="Logo" />
                    </a>
                </div>

                <div class="header-left">
                    <h4 class="mt-3" localize-content>@ViewBag.Title</h4>
                    <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            @if (ViewBag.Breadcrumbs != null)
                            {
                                foreach (var item in ViewBag.Breadcrumbs)
                                {
                                    string title = item.Item1;
                                    string url = item.Item2;
                                    bool isActive = item.Item3;

                                    if (isActive)
                                    {
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <span class="d-inline-block text-truncate" style="max-width: 150px" title="@title" localize-content>@title</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="breadcrumb-item">
                                            <a href="@url">
                                                <span class="d-inline-block text-truncate" style="max-width: 150px" title="@title" localize-content>@title</span>
                                            </a>
                                        </li>
                                    }
                                }
                            }
                        </ol>
                    </nav>
                </div>

                <div class="header-center">
                    <form class="search-form">
                        <input class="form-control form-control-sm" list="datalistOptions" placeholder="Tìm kiếm" />
                        <datalist id="datalistOptions">
                            <option value="San Francisco"></option>
                            <option value="New York"></option>
                            <option value="Seattle"></option>
                            <option value="Los Angeles"></option>
                            <option value="Chicago"></option>
                        </datalist>

                        <button type="button">
                            <img src="~/images/search.png" alt="Tìm kiếm" />
                        </button>
                    </form>
                </div>

                <div class="header-right">
                    <img src="~/images/happy-new-year.gif" alt="Hình động chúc mừng năm mới" />

                    <div class="dark-mode">
                        <label>
                            <input type="checkbox" />
                            <div class="slider">
                                <div class="circle"></div>
                            </div>
                        </label>
                    </div>

                    <div class="header-controls">
                        <div class="notification">
                            <button type="button" class="btn-icon" data-bs-toggle="dropdown">
                                <img src="~/images/notification.png" alt="Thông báo" />
                                <div class="count">15</div>
                            </button>

                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-info">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo thông tin</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-warning">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo cảnh báo</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-danger">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo nguy hiểm</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-primary">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo chính</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-secondary">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo phụ cấp 1</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-success">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo hoàn thành</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item notification-purple">
                                            <div class="notification-item-icon"></div>
                                            <div class="notification-item-content">
                                                <div class="notification-text capitalize">bạn nhận được 1 thông báo tím</div>
                                                <div class="notification-time">1 giờ trước</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="profile">
                            <button type="button" class="btn-icon" data-bs-toggle="dropdown">
                                <img src="~/images/account.png" alt="Tài khoản" />
                            </button>

                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="profile-basic">
                                            <div class="profile-img"><img src="~/images/avartar.jpg" alt="" /></div>
                                            <div class="profile-info">
                                                <div class="profile-user-name text-capitalize">nguyễn minh trí</div>
                                                <div class="profile-role" localize-content>Admin</div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li>
                                    <a class="dropdown-item" id="logout" asp-action="Logout" asp-controller="Account">
                                        <div localize-content>Logout</div>
                                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="setting">
                            <button type="button" class="btn-icon">
                                <img src="~/images/setting.png" alt="Cài đặt" />
                            </button>
                        </div>

                        <div class="inline-spacing">
                            <div class="btn-group">
                                <p class="dropdown-toggle"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    @culture
                                </p>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/vi/Dashboard/SetCultureCookie?cltr=vi&returnUrl=/vi" localize-content>Vietnamese</a></li>
                                    <li><a class="dropdown-item" href="/en/Dashboard/SetCultureCookie?cltr=en&returnUrl=/en" localize-content>English</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!--& MAIN -->
            <main class="main">
                <!--& LOADER -->
                <div class="loader">
                    <l-infinity size="55" stroke="4" stroke-length="0.15" bg-opacity="0.1" speed="1.3" color="black"></l-infinity>
                </div>

                <div class="main-wrapper">@RenderBody()</div>
            </main>
        </div>
    </div>

    <script src="~/lib/js/apexcharts/apexcharts.min.js"></script>
    <script src="~/lib/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/lib/js/bootstrap/popper.min.js"></script>
    <script src="~/lib/js/fullcalendar/index.global.js"></script>
    <script src="~/lib/js/moment/moment.min.js"></script>
    <script src="~/lib/js/sortable/sortable.min.js"></script>
    <script src="~/lib/js/tippy/tippy-bundle.umd.min.js"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/ldrs/dist/auto/infinity.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/layout.js"></script>
    <script src="~/js/helper.js"></script>
</body>
</html>

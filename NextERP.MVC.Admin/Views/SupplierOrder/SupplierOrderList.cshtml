@using System.Reflection
@using NextERP.ModelBase
@using NextERP.ModelBase.APIResult
@using NextERP.ModelBase.PagingResult
@using NextERP.Util
@using UtilHtmlHelper = NextERP.Util.HtmlHelper
@model APIBaseResult<PagingResult<SupplierOrderModel>>

<h5 class="text-center" localize-content>@TableName.SupplierOrder</h5>

<div class="table-container">
	<table class="table table-hover me-2">
		<thead>
			<tr>
				<th>
					<div class="form-check">
						<input class="check-all form-check-input" type="checkbox" />
					</div>
				</th>
				<th>#</th>
				@{
					var excludedFields = new[] { Constants.AllowPaging, Constants.PageIndex, Constants.PageSize,
								Constants.Id, Constants.Ids, Constants.IsDelete, Constants.ImageFile, Constants.ImagePath };

					var listField = UtilHtmlHelper.GetOrderedProperties<SupplierOrderModel>(excludedFields);

					foreach (var item in listField)
					{
						<th localize-content>@item.Name</th>
					}
				}
			</tr>
		</thead>

		<tbody class="sortable-group table-group-divider">
			@if (DataHelper.ListIsNotNull(Model))
			{
				int counter = (Model!.Result!.PageIndex - 1) * Model.Result.PageSize + 1;

				foreach (var row in Model!.Result!.Items!)
				{
					<tr>
						<td>
							<input type="hidden" name="@SupplierOrderModel.AttributeNames.SupplierOrderId" value="@row.Id" />
							<div class="form-check">
								<input class="form-check-input @TableName.SupplierOrder-checkbox" type="checkbox" />
							</div>
						</td>
						<td>@counter</td>
						@foreach (var field in listField)
						{
							var value = field.GetValue(row);

							string statusColorClass = string.Empty;

							if (field.Name == nameof(Enums.OrderStatus).ToString()
								|| field.Name == nameof(Enums.PaymentStatus).ToString())
							{
								switch (value)
								{
									case nameof(Enums.OrderStatus.Delivered):
										statusColorClass = "status-color-success";
										break;
									case nameof(Enums.OrderStatus.Cancelled):
										statusColorClass = "status-color-danger";
										break;
									case nameof(Enums.PaymentStatus.Paid):
										statusColorClass = "status-color-success";
										break;
									case nameof(Enums.PaymentStatus.Unpaid):
										statusColorClass = "status-color-danger";
										break;
									case nameof(Enums.OrderStatus.Processing):
										statusColorClass = "status-color-warning";
										break;
								}
							}

							if (field.Name == Constants.Base64Image)
							{
								<td>
									@if (row.Base64Image != null)
									{
										<img src="@row.Base64Image" alt="Image" width="30" height="30" data-bs-toggle="modal" data-bs-target="#view-signature-modal">
									}
								</td>
							}
							else
							{
								<td><span localize-content class="@statusColorClass">@Html.Raw(value ?? "")</span></td>
							}
						}
					</tr>

					counter++;
				}
			}
		</tbody>
	</table>
</div>

@if (DataHelper.ListIsNotNull(Model))
{
	<nav id="pagination-container" aria-label="Page navigation">
		@await Component.InvokeAsync(Constants.Pagination, Model.Result)
	</nav>
}

<script>
	$(function () {
		// Kích hoạt strict mode cho toàn bộ code bên trong hàm này
		'use strict';

		$("#pagination-container").on("click", ".page-link", function () {
			const $pageIndex = $(this).data("page");
			if (!$pageIndex) return;

			// Xử lý active
			$("#pagination-container .page-item").removeClass("active");
			$(this).parent().addClass("active");

			const $searchForm = $("#@TableName.SupplierOrder-search-form");

			loadSupplierOrders($searchForm, $pageIndex);
		});

		$(".check-all").change(function () {
			// Gán giá trị cho tất cả checkbox SupplierOrder-checkbox
			$(".@TableName.SupplierOrder-checkbox").prop("checked", $(this).is(":checked") ? true : false);
		});

		$("table img[data-bs-toggle='modal']").click(function () {
			var src = $(this).attr("src"); // lấy src của ảnh click

			// Gán src vào ảnh trong modal
			$("#view-signature-modal img").attr("src", src);
		});
	});
</script>

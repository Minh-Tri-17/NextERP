@using NextERP.ModelBase
@using NextERP.Util
@model NextERP.ModelBase.ScheduleModel
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer Localizer

<div class="modal fade" id="create-edit-modal" aria-hidden="true" tabindex="-1">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<form class="needs-validation" id="@TableName.Schedule" novalidate>
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel" localize-content>CreateOrEdit</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<input id="@ScheduleModel.AttributeNames.ScheduleId" type="hidden" asp-for="Id" />

					<div class="mb-2">
						<label for="@ScheduleModel.AttributeNames.ScheduleCode" class="col-form-label col-md-6" localize-content>@ScheduleModel.AttributeNames.ScheduleCode</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="text" asp-for="ScheduleCode" disabled />
						</div>
					</div>

					<div class="mb-2">
						<label for="@ScheduleModel.AttributeNames.WorkDate" class="col-form-label col-md-6" localize-content>@ScheduleModel.AttributeNames.WorkDate</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="datetime-local" asp-for="WorkDate" />
							<div class="invalid-feedback" id="invalid-@ScheduleModel.AttributeNames.WorkDate" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ScheduleModel.AttributeNames.StartTime" class="col-form-label col-md-6" localize-content>@ScheduleModel.AttributeNames.StartTime</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="time" asp-for="StartTime" />
							<div class="invalid-feedback" id="invalid-@ScheduleModel.AttributeNames.StartTime" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ScheduleModel.AttributeNames.EndTime" class="col-form-label col-md-6" localize-content>@ScheduleModel.AttributeNames.EndTime</label>
						<div class="col-md-12">
							<input class="form-control form-control-sm" type="time" asp-for="EndTime" />
							<div class="invalid-feedback" id="invalid-@ScheduleModel.AttributeNames.EndTime" localize-content></div>
						</div>
					</div>

					<div class="mb-2">
						<label for="@ScheduleModel.AttributeNames.Note" class="col-form-label col-md-6" localize-content>@ScheduleModel.AttributeNames.Note</label>
						<div class="col-md-12">
							<textarea class="form-control form-control-sm" rows="3" asp-for="Note"></textarea>
							<div class="invalid-feedback" id="invalid-@ScheduleModel.AttributeNames.Note" localize-content></div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
						<i class="fa-solid fa-xmark"></i> <span localize-content>@Constants.ButtonClose</span>
					</button>
					<button type="button" class="button btn save-button" data-bs-dismiss="modal">
						@{
							var saveAndCloseIcon = @"<svg class=""icon"" fill=""none"" stroke=""currentColor"" viewBox=""0 0 24 24"" xmlns=""http://www.w3.org/2000/svg"" stroke-linecap=""round"" stroke-linejoin=""round"" stroke-width=""2.5""><path d=""M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z""></path><polyline points=""17 21 17 13 7 13 7 21""></polyline><polyline points=""7 3 7 8 15 8""></polyline></svg>";
						}

						@await Component.InvokeAsync(Constants.Button, new { nameButton = Constants.ButtonSaveAndClose, iconHtml = saveAndCloseIcon })
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	$(function () {
		// Kích hoạt strict mode cho toàn bộ code bên trong hàm này
		'use strict';

		$(".save-button").click(function () {
			const $searchForm = $("#@TableName.Schedule-search-form");
			const $saveForm = $(this).closest("form");
			const $formElement = $saveForm.get(0);
			const $formData = new FormData($formElement);
			let id = $formData.get("@Constants.Id");

			// Nếu không có ID (tạo mới), set Guid.Empty
			if (!id || id.trim() === "") {
				$formData.set("@Constants.Id", "@Guid.Empty");
			}

			callApi("@Url.Action(Constants.CreateOrEdit, TableName.Schedule)", "POST", $formData)
				.then(data => {
					loadSchedules($searchForm);

					if (data && Array.isArray(data)) {
						showInvalid(data, $formElement);
					}
				})
				.catch(err => {
					showMessage("@Localizer[Messages.ErrorCallAPI]");
				});
		});
	});
</script>

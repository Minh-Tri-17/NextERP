@using static NextERP.Util.Enums
@model NextERP.ModelBase.UserModel

<!DOCTYPE html>

<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Next ERP | Đăng nhập</title>
    <link rel="icon" type="image/x-icon" href="/assets/img/logo.ico" />
    <link rel="stylesheet" href="~/assets/css/font-awesome/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/login.css" />
</head>

<body>
    <div class="login-wrapper" id="loginWrapper">
        <!--& LOGIN -->
        <form class="card login-container needs-validation" asp-action="Index" asp-controller="Account" novalidate>
            <input type="hidden" asp-for="GroupRole" value="Admin" />

            <h2 class="text-center">đăng nhập</h2>
            <div class="login-form">
                <div class="mb-2">
                    <label for="user-name" class="col-form-label col-md-6">tên đăng nhập</label>
                    <div class="col-md-12">
                        <input class="form-control" id="user-name" type="text" asp-for="Username" required />
                        <div class="invalid-feedback">vui lòng nhập tên đăng nhập.</div>
                    </div>
                </div>

                <div class="mb-2">
                    <label for="password" class="col-form-label col-md-6">mật khẩu</label>
                    <div class="col-md-12">
                        <input class="form-control" id="password" type="password" asp-for="Password" required minlength="6" />
                        <div class="invalid-feedback">mật khẩu phải có ít nhất 6 ký tự.</div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center my-3">
                    <div class="form-check">
                        <input class="form-check-input" id="rememberMe" type="checkbox" asp-for="Remember" />
                        <label class="form-check-label" for="rememberMe">nhớ mật khẩu</label>
                    </div>
                    <a href="#" id="forgot-password">Quên mật khẩu?</a>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">đăng nhập</button>
                </div>
            </div>
        </form>

        <!--& FORGOT PASSWORD -->
        <form class="card forgot-container needs-validation" asp-action="Index" asp-controller="Account" novalidate>
            <h2 class="text-center">quên mật khẩu</h2>
            <div class="forgot-form">
                <div class="mb-2">
                    <label for="new-password" class="col-form-label">mật khẩu mới</label>
                    <input class="form-control" id="new-password" type="password" asp-for="Password" required minlength="6" />
                    <div class="invalid-feedback">mật khẩu phải có ít nhất 6 ký tự.</div>
                </div>

                <div class="mb-2">
                    <label for="forgot-phone" class="col-form-label">sđt đăng ký</label>
                    <input class="form-control" id="forgot-phone" type="text" asp-for="PhoneNumber" required minlength="10" />
                    <div class="invalid-feedback">vui lòng nhập số điện thoại hợp lệ.</div>
                </div>

                <div class="my-3 text-center">
                    <button onclick="sentOTP()" class="btn btn-primary">gửi mã xác nhận</button>
                </div>
                <div class="text-center">
                    <a href="#" id="back-login">Quay lại đăng nhập</a>
                </div>
            </div>
        </form>
    </div>

    <script>
        function sendOTP() {
          alert("Chức năng chưa làm nào rảnh rồi làm sau");
        }
    </script>

    <script src="~/assets/js/jquery/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap/popper.min.js"></script>
    <script src="~/assets/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/login.js"></script>
    <script src="~/assets/js/helper.js"></script>
</body>
</html>
